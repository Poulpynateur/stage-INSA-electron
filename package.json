{
  "name": "rss-reader",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "extraResources": [
      {
        "from": "app/conf",
        "to": "conf",
        "filter": [
          "**/*",
          "!*.md"
        ]
      },
      {
        "from": "ressources/scraped/archive",
        "to": "scraped/archive",
        "filter": [
          "**.*",
          "!*.json"
        ]
      },
      {
        "from": "ressources/scraped/rss",
        "to": "scraped/rss",
        "filter": [
          "**.*",
          "!*.json"
        ]
      }
    ],
    "win": {
      "target": "NSIS ",
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "bootstrap": "^4.1.3",
    "cheerio": "^1.0.0-rc.3",
    "davefeedread": "^0.5.2",
    "feedparser": "^2.2.9",
    "jquery": "^3.3.1",
    "limdu": "^0.9.4",
    "natural": "^0.6.3",
    "popper.js": "^1.14.4",
    "python-shell": "^1.0.7",
    "request": "^2.88.0"
  }
}
